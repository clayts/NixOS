{
  "terminal.integrated": {
    "letterSpacing": 1,
    "smoothScrolling": true
  },
  "window": {
    "restoreWindows": "none",
    "titleBarStyle": "custom",
    "menuBarVisibility": "toggle"
  },
  "explorer.confirmDragAndDrop": false,
  "editor": {
    "tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": "comment",
          "settings": {
            "fontStyle": "italic"
          }
        }
      ]
    },
    "wordWrap": "on",
    "fontLigatures": "'calt', 'ss01'",
    "formatOnSave": true,
    "smoothScrolling": true,
    "minimap.enabled": false
  },
  "workbench": {
    "list.smoothScrolling": true,
    "startupEditor": "none",
    "iconTheme": "file-icons",
    "colorTheme": "Adwaita Dark"
  },
  "html.format.preserveNewLines": false,
  "nix": {
    "enableLanguageServer": true,
    "serverSettings.nil.formatting.command": [
      "alejandra"
    ]
  },
  "git": {
    "autofetch": true,
    "terminalGitEditor": true
  }
}